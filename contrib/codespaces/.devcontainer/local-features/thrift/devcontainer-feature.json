{
    "id": "thrift",
    "version": "1.0",
    "name": "Apache Thrift Compiler",
    "description": "Installs latest version of the Apache Thrift compiler.",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "latest",
                "none",
                "0.17.0"
            ],
            "default": "0.17.0",
            "description": "Select or enter an Apache Thrift version to install"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/java"
    ]
}